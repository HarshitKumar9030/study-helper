# Study Helper Python Backend Configuration

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/study-helper
DATABASE_NAME=study-helper

# NextAuth JWT Configuration (must match Next.js app)
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# API Configuration
NEXT_API_BASE_URL=http://localhost:3000/api
API_TIMEOUT=30

# Voice Assistant Configuration
WAKE_WORD=study helper
VOICE_TIMEOUT=5
VOICE_PHRASE_TIME_LIMIT=10

# Focus Mode Configuration
FOCUS_MODE_ENABLED=true
BLOCKED_SITES_FILE=blocked_sites.txt

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=study_helper.log

# System Tray Configuration
ENABLE_SYSTEM_TRAY=true
MINIMIZE_TO_TRAY=true

# Scheduler Configuration
SCHEDULER_INTERVAL=60  # seconds
ADAPTIVE_LEARNING=true
