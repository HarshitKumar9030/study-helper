                                        </Button>
                                        <Button Grid.Column="2" x:Name="TestButton" Style="{StaticResource ModernButton}" Click="TestButton_Click">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ§ª" FontSize="14" Margin="0,0,8,0"/>
                                                <TextBlock Text="Test" FontSize="14"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                      <Label Grid.Row="1" Grid.Column="0" Content="Base URL:" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="BaseUrlBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="http://localhost:3000" Margin="0,0,0,16"/>
                                    
                                    <Label Grid.Row="2" Grid.Column="0" Content="Timeout (seconds):" Style="{StaticResource ModernLabel}"/>
                                    <TextBox x:Name="TimeoutBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource ModernTextBox}" Text="30" Margin="0,0,0,16"/>
                                      <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource SuccessButton}" 
                                           Click="SaveApiSettingsButton_Click" 
                                           HorizontalAlignment="Left" 
                                           Width="220" 
                                           Margin="0,16,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,8,0"/>
                                            <TextBlock Text="Save API Settings" FontSize="14"/>
                                        </StackPanel>
                                    </Button>
                                </Grid>
                            </Grid>
                        </Border>
                        
